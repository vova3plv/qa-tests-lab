    "name": "QA API Tests - Tasks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "01 - Create task (OWNER)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Role",
            "value": "OWNER"
          },
          {
            "key": "X-UserId",
            "value": "u1"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/tasks",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tasks"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Task 1\",\n  \"description\": \"OK\",\n  \"deadline\": \"2030-01-01\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 201', () => pm.response.to.have.status(201));",
              "const json = pm.response.json();",
              "pm.test('Has id', () => pm.expect(json.id).to.be.ok);",
              "pm.test('OwnerId correct', () => pm.expect(json.ownerId).to.eql('u1'));",
              "pm.environment.set('taskId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "02 - Get task (200)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
          "host": [
            "{{baseUrl}}"
          ],
